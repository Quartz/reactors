/*
 * Config
 */
border-radius()
  -webkit-border-radius: arguments
  -moz-border-radius: arguments
  border-radius: arguments

/*
 * Thing styles
 */
.item-body h2
  // font-size 1.2em
  // line-height 1.2em
  // font-style bold
  margin 15px 0px 10px

svg
  background-color: $qz-map-water

.borders path
  stroke: $qz-map-land-stroke
  stroke-width: 1px
  fill: $qz-map-land-fill

.reactors
  circle
    fill: $qz-blue-1

  text
    font-size: 0.5em
    text-anchor: middle
    dominant-baseline: middle

div.clear
  clear: both

/*
 * Media queries
 */
@media screen and (max-width: 600px)
  .item-body h2
    font-size 14px
